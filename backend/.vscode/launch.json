{
    "name": "Python: Flask",
    "type": "python",
    "request": "launch",
    "module": "flask",
    "env": {
        "FLASK_APP": "app.py",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "0" // Set to 1 to enable debug mode
    },
    "args": [
        "run",
        "--no-debugger", // Remove this if you want the Flask debugger
        "--no-reload" // Remove this if you want the auto reloader
    ],
    "jinja": true
  }
  